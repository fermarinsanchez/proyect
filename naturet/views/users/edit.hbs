{{> searchmobile}}


<div class="container-slider mx-auto profile-container mt-6">
  <div class="row pb-5 pt-5">
     <div class="col-xl-4 col-md-12 col-12 row mx-auto">
      <div class="profile-sidenav d-flex flex-column mx-auto " id="getFixed">
        <div class="profile-sidenav-inside d-flex flex-column">
          <a href="#categories">Categories</a>
          <a href="#description">Some description</a>
          <a href="#role">User role</a>
          <a href="#experiences">Experiences</a>
          <a class="btn btn-danger mt-3" id="edit-profile-button" href="/profile/edit">Edit Profile</a>
          {{#if session.creator}}
          <a class="btn btn-default" href="/creator/edit">Edit Creator Profile</a>
          {{/if}}
        </div>
      </div>
    </div>
    <div class="col-xl-8 col-md-8 col-12">
  <div class="row">
        <div class="back-image-profile">
        </div>
      </div>
      <section class="border-bottom pb-5">
        <div class="text-center mt-5">
          <div>
            <img class="profile-image" src="{{session.photo}}">
            {{#if session.creator}}
            <span class="creator-simbol"></span>
            {{/if}}
          </div>
          <h3 id="profile-name" class="mt-2">{{session.name}} - <span class="nt-c">{{#if session.creator}}
              Creator</span> <span class="icon-030 nt-c"></span>
            {{else}}
            Adventurous</span>
            {{/if}}</span></h3>
        </div>
      </section>

      <h1>Your Profile</h1>
      <img src="{{session.photo}}">
      <h3>{{session.name}}</h3>
      <hr>
      <h1>categories</h1>
      <h5 class="mb-3">"Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor in</h5>
      <p class="mb-5">Lit amet, consectetur adipiscing elit, sed do eiusmod tempor inLorem ipsum dolor sit amet,
        consectetur adipiscing elit, sed do eiusmod tempor inLorem ipsum dolor sit amet, consectetur adipiscing elit,
        sed do eiusmod tempor inLorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor in</p>

      {{#if errors.error }}
      <h2>{{ errors.error }}</h2>
      {{/if}}
      <form class="" method="POST" enctype="multipart/form-data">
        <div class="row">
          {{#each allCategories as |category| }}

          <div class="col-xl-2 col-md-3 col-6">
               <input type='checkbox' name="categories" class="input-category" id="{{ category.id }}" value="{{ category.id }}"
              {{#isCategorySelected ../session category ../categories }} {{/isCategorySelected}} />
            <div class="category-card">
           
              <span class='icon-{{category.fontnum}}'></span>
              <!-- descomentar esto par aÃ±adir estilo -->
              <p class="category-name">{{ category.name }} </p>
            </div>
          </div>
          </input>

          {{/each}}

        </div>
        <hr>
        <div class="form-group">
          <h1>Some description</h1>

          <div class="mb-2">
            <h5 class="mb-3">"Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor in</h5>
            <p class="mb-5">Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor inLorem
              ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor inLorem ipsum dolor sit amet,
              consectetur adipiscing elit, sed do eiusmod tempor inLorem ipsum dolor sit amet, consectetur adipiscing
              elit, sed do eiusmod tempor inLorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod
              tempor in</p>
            <h4>about you</h4><small>Lorem ipsum dolor sit amet, consectetur adipiscing elit,</small>
            <input type="text" name="about" id="address" class="w-100 mt-1" value="{{session.about}}">
          </div>

          <div class="mb-2">
            <h4>Birth Date</h4><small>Lorem ipsum dolor sit amet, consectetur adipiscing elit,</small>
            <input type="date" name="birth" class="d-table mt-2" value="{{session.birth}}">
          </div>

          <div class="mb-2">
            <h4>From:</h4><small>Lorem ipsum dolor sit amet, consectetur adipiscing elit,</small>
            <div class="autocomplete">
              <input id="myInput" type="text" name="country" placeholder="Country" value='{{session.country}}'>
            </div>
          </div>

          <div class="mb-2">
            <h4>Your phone number</h4><small>Lorem ipsum dolor sit amet, consectetur adipiscing elit, Lorem ipsum dolor
              sit amet, consectetur adipiscing elit</small>
            <input type="text" name="phone" class="w-100 mt-1" value="{{session.phone}}">
          </div>
        </div>



        <div class="input-group-prepend mb-2">
          <h4>Your Album</h4><small>Some photos that can tell something about you and your interests</small>
          <span class="input-group-text"> <i class="fas fa-image"></i> </span>
        </div>
        <input type="file" class="form-control" name="picture" placeholder="Picture" value="string" multiple />
        <hr>
        <button class="btn btn-primary btn-block p-3" type="submit">Guardar</button>
      </form>
    </div>
  </div>
</div>
<script>
  jQuery(function ($) {
    function fixDiv() {
      var $cache = $('#getFixed');
      if ($(window).scrollTop() > 100 && $(window).width() >= 1080)
        $cache.css({
         'top': '40px'
        });
      else
        $cache.css({
          'top': 'auto'
        });
    }
    $(window).scroll(fixDiv);
    fixDiv();
  });
</script>