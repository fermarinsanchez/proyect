<div class="container profile-container">
  <div class="row pb-5">

    <div class="col-xl-3 col-md-3 col-12 ">
      <div class=" profile-navigation d-flex flex-column mx-auto ">
        <a href="">Categories</a>
        <a href="">Some description</a>
        <a href="/">Home</a>
        <a href="/profile">profile</a>
     

        {{#theCreator experience session}}
        <h6>creator</h6>
        {{else}}
        <button class="btn btn-success fav-btn  {{#isfollow ../experience ../session}}{{else}}unfollow{{/isfollow}}" type="button"
          value="{{../experience.id}}" id="fav-btn">
          {{#isfollow ../experience ../session}}
          <i class="fav-btn fas fa-star "></i>
          {{else}}
          <i class="fav-btn far fa-star "></i>
          {{/isfollow}}
          </button>
          
          <form action="/experiences/{{../experience.id}}/charge" method="POST">
            <script 
              src="https://checkout.stripe.com/checkout.js" 
              class="stripe-button" 
              data-key="pk_test_zcTEmEh9DNzx17DvNLibaUVS"
              data-name="{{../experience.name}}" 
              data-description="Total a pagar: {{../experience.price}} €" 
              data-amount="{{../experience.price}}00 €">
              </script>
          </form>


{{!-- 
        <form action="/experiences/{{../experience.id}}/purchased" class="mt-1" method="post">
          <div class="form-actions">
            <button class="btn btn-danger" type="submit">
              purchased
            </button>
          </div>
        </form> --}}
        {{/theCreator}}
      </div>
    </div>


    <div class="col-xl-9 col-md-9 col-12">
      <div class="text-center">
        <img class="profile-image" src="http://prpop.org/wp-content/plugins/ajax-search-pro/img/default.jpg" width="250px">
        <h3>{{experience.name}}</h3>
      </div>

      <hr>
      <h1>categories</h1>
      <h5 class="mb-3">"Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor in</h5>
      <p class="mb-5">Lit amet, consectetur adipiscing elit, sed do eiusmod tempor inLorem ipsum dolor sit amet,
        consectetur adipiscing elit, sed do eiusmod tempor inLorem ipsum dolor sit amet, consectetur adipiscing elit,
        sed do eiusmod tempor inLorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor in</p>
      <div class="row">
        {{#each allCategories as |category| }}

        <div class="col-xl-2 col-md-3 col-6 noevent not-shown" style="display:{{#containCategoryexp ../experience category ../categories }}{{/containCategoryexp}}">

          <div class="category-card noevent">
            <span class='icon-{{category.fontnum}}'></span>
            <!-- descomentar esto par añadir estilo -->
            <p class="category-name">{{ category.name }} </p>
          </div>
        </div>
        </input>

        {{/each}}

      </div>
      <hr>
      <div class="form-group">
        <h1>Some description</h1>

        <div class="mb-2">
          <h5 class="mb-3">"Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor in</h5>
          <h3>{{experience.description}}</h3>
          <hr>
        </div>

        <div class="mb-2">
          <h3>¿Que incluye?</h3><small>Lorem ipsum dolor sit amet, consectetur adipiscing elit,</small>
          <h4>{{experience.includes}}</h4>
          <hr>
        </div>

        <div class="mb-2">
          <h3>Idiomas</h3><small>Lorem ipsum dolor sit amet, consectetur adipiscing elit,</small>
          <h4>{{experience.languages}}</h4>
          <hr>
        </div>
        <div class="mb-2">
          <h3>Precio</h3><small></small>
          <h4>{{experience.price}}€</h4>
          <hr>
        </div>
        <div class="mb-2">
          <h3>Duracion</h3><small>El tiempo de duración una vez comienza la actividad, siempre en minutos</small>
          <h4>{{experience.duration}} minutos</h4>
          <hr>
        </div>

        <div class="mb-2">
          <h3>¿Que debes saber?</h3><small>Lorem ipsum dolor sit amet, consectetur adipiscing elit, Lorem ipsum dolor
            sit amet, consectetur adipiscing elit</small>
          <h4>{{experience.anymore}}</h4>
          <hr>
        </div>
        <div class="mb-2">
          <h3>Mapa actividad</h3><small>Lorem ipsum dolor sit amet, consectetur adipiscing elit, Lorem ipsum dolor
            sit amet, consectetur adipiscing elit</small>
          <div id="map" style="pointer-events: none;"></div>
          <hr>
        </div>
      </div>

      <div class=" mb-2">
        <h4> <span class="input-group-text"> <i class="fas fa-image"></i> </span>Fotos</h4>
        {{#each experience.photos}}
        <img src="{{this}}" style="max-width: 200px;">
        {{/each}}
      </div>
      <!--- Comments experience -->


        {{#ispurchased experience session}}
        <form action="/experiences/{{../experience.id}}/docomment" class="mt-1" method="post">
          <div class="form-actions">

            <!--- rating experience -->
        <h2>Puntua la experiencia</h2>
        <section class='rating-widget'>
          
          <!-- Rating Stars Box -->
          <div class='rating-stars text-center'>
            <ul id='stars'>
              <li class='star' title='Poor' data-value='1'>
                <i class='fa fa-star fa-fw'></i>
              </li>
              <li class='star' title='Fair' data-value='2'>
                <i class='fa fa-star fa-fw'></i>
              </li>
              <li class='star' title='Good' data-value='3'>
                <i class='fa fa-star fa-fw'></i>
              </li>
              <li class='star' title='Excellent' data-value='4'>
                <i class='fa fa-star fa-fw'></i>
              </li>
              <li class='star' title='WOW!!!' data-value='5'>
                <i class='fa fa-star fa-fw'></i>
              </li>
            </ul>
          </div>
          
          <div class='success-box'>
            <div class='clearfix'></div>
            <img alt='tick image' width='32' src='data:image/svg+xml;utf8;base64,'/>
            <div class='text-message'></div>
            <div class='clearfix'></div>
          </div>

        </section>

            <div class="form-group">
              <input type="Number" class="form-control" id="rate" name="rate" style="display: none;" >
            </div>
            {{#if errors.rate }}
            <h2>{{ errors.rate }}</h2>
            {{/if}}

            <h2 for="docomment">Escribe tu comentario</h2>
            <small>Solo se podrá puntuar y comentar una vez la experiencia</small>
            <textarea class="form-control mb-4" name="message" rows=2></textarea>
            {{#if errors.message }}
            <h2>{{ errors.message }}</h2>
            {{/if}}

         <button class="btn btn-primary btn-lg mb-2 " type="submit">enviar</button>
          </div>
        </form>

        {{else}}
        
        <h1>Comentarios</h1>
        <small>Solo si compras la experiencia o no eres su creador/a podrás puntuarla y escribir un comentario</small>
        {{/ispurchased}}


     
      <hr>
      {{#each experience.comments}}
      <div>
        <div class="flex-row align-items-center mb-3">
          <div class="image-slide-owner" style="background:url('{{this.user.photo}}')"></div>
          <divclass="column">
            <h6 class="ml-3 p-0 mb-0"><strong>{{this.user.name}}</strong></h6>
            <span class="ml-3 p-0 date-comment">
              {{#formatDate this.createdAt}}
              {{/formatDate}}
            </span>
            <span class="ml-3 p-0 mb-0"><i class='fa fa-star fa-fw'></i></span>
        </div>
        <div class="flex-row">
          <h5>{{this.message}}</h5>
        </div>
      </div>
      <hr>
      {{/each}}
    </div>
  </div>
</div>

<script>
  var decodedJson = decodeURIComponent("{{{pointsJSON}}}");
  var jsonObj = JSON.parse(decodedJson);
  window.points = jsonObj;
</script>

<script src="/js/axios.js" type="text/javascript"></script>
<script src="/js/rating.js" type="text/javascript"></script>

